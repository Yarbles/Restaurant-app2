<html>
    <head>
        <title>Restaurant Finder</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
    </head>
    <body>
        <div class="container">
        <h1>{{ cuisines.getName }}</h1>

        {% if cuisines is not empty %}
            <p>Here are all the Restaurants:</p>
            <ul>
                {% for cuisine in cuisines %}
                    <li>{{ cuisine.getName }}</li>
                {% endfor %}
            </ul>
        {% endif %}

        <form action='/cuisines' method='post'>
            <label for='name'>Cuisine Name</label>
            <input id='name' name='name' type='text'>

            <button type='submit'>Add Cuisine</button>
        </form>
        <form action='/delete_cuisines' method='post'>
            <button type='submit' class="btn btn-info">Clear</button>
        </form>

        <p><a href='/'>Home</a></p>
    </div>
    </body>
</html>
