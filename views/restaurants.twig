<html>
    <head>
        <title>Restaurants</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
    </head>
    <body>
        <div class="container">
        <h1>Restaurants</h1>
        {% if restaurants is not empty %}
            <p>Here are all your restaurants:</p>
            <ul>
                {% for restaurant in restaurants %}
                    <li>{{ restaurant.getName }}</li>
                    <li>{{ restaurant.getAddress }}</li>
                    <li>{{ restaurant.getDescription }}</li>
                {% endfor %}
            </ul>
        {% endif %}

        <form action='/restaurants' method='post'>
            <label for='name'>Restaurant name</label>
            <input id='name' name='name' type='text'>

            <label for='address'>Restaurant address:</label>
            <input id='address' name='address' type='text'>

            <label for='description'>Restaurant description:</label>
            <input id='description' name='description' type='text'>

            <button type='submit'>Add Restaurant!</button>
        </form>
        <form action='delete_restaurants' method='post'>
            <button type='submit' class="btn btn-info">Delete Restaurant</button>
        </form>

        <p><a href='/'>Home</a></p>
    </div>
    </body>
</html>
