<h1>Update the {{ cuisines.getName }} cuisine</h1>

<form action='/cuisines/{{ cuisines.getId }}' method='post'>
    <input name='_method' type='hidden' value='patch'>

    <label for='name'>Rename the type of cuisine for this Restaurant</label>
    <input id='name' name='name' type='text'>

    <button type='submit'>Update</button>
</form>

<form action='/cuisines/{{ cuisines.getId }}' method='post'>
    <input name='_method' type='hidden' value='delete'>

    <button type='submit'>Delete this Cuisine</button>
</form>
